<?xml version="1.0" encoding="utf-8"?>
<network-security-config xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Allow cleartext only to your specific host(s) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">liber-hq</domain>
        <domain includeSubdomains="true">minecraft.net</domain>
        <domain includeSubdomains="true">192.168.1.20</domain>
        <!-- Add more if needed, e.g. for local dev: -->
        <!-- <domain includeSubdomains="true">192.168.1.100</domain> -->
        <!-- <domain includeSubdomains="true">10.0.2.2</domain> --> <!-- emulator localhost -->
    </domain-config>

    <!-- Optional: enforce HTTPS for everything else -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>